        <ArticleTitle>Are Human Dendrites Different?</ArticleTitle>
        <Pagination>
          <StartPage>411</StartPage>
          <EndPage>412</EndPage>
          <MedlinePgn>411-412</MedlinePgn>
        </Pagination>
