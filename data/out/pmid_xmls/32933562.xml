        <ArticleTitle>Facial masks in children: the position statement of the Italian pediatric society.</ArticleTitle>
        <Pagination>
          <StartPage>132</StartPage>
          <MedlinePgn>132</MedlinePgn>
        </Pagination>
        <ELocationID EIdType="pii" ValidYN="Y">132</ELocationID>
