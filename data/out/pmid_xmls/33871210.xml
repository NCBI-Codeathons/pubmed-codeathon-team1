        <ArticleTitle>Mycoplasma pneumoniae-induced rash and mucositis: A new entity.</ArticleTitle>
        <Pagination>
          <StartPage>349</StartPage>
          <EndPage>353</EndPage>
          <MedlinePgn>349-353</MedlinePgn>
        </Pagination>
        <ELocationID EIdType="doi" ValidYN="Y">10.25259/IJDVL_660_19</ELocationID>
